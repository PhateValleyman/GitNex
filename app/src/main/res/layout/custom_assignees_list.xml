<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/assigneesSelection"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen36dp"
        android:checked="false"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/dimen16sp"/>

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="@dimen/dimen24dp"
        android:layout_height="@dimen/dimen24dp"
        android:layout_marginStart="@dimen/dimen44dp"
        android:layout_marginTop="@dimen/dimen8dp"
        android:layout_marginEnd="@dimen/dimen4dp"
        app:cardCornerRadius="@dimen/dimen6dp"
        app:cardElevation="@dimen/dimen0dp">

        <ImageView
            android:id="@+id/assigneesAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/generalImgContentText"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/assigneesName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen72dp"
        android:paddingTop="@dimen/dimen8dp"
        android:paddingEnd="@dimen/dimen4dp"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/dimen16sp"/>

</RelativeLayout>

